package:
    name: genutil
    version: @VERSION@.npy{{ numpy }}

source:
    git_rev: @UVCDAT_BRANCH@
    git_url: git://github.com/CDAT/genutil.git

build:
  number: @BUILD_NUMBER@
  skip: true  # [win]
  script: {{ PYTHON }} -m pip install . --no-deps -vv

requirements:
    build:
        - {{ compiler("c") }}
    host:
        - python
        - pip
        - cython
        - setuptools
        - numpy
        - udunits2
    run:
        - python
        - cdms2
        - udunits2
        - {{ pin_compatible('numpy') }}
test:
    commands:
        - python -c "import genutil"

about:
    home:  http://github.com/CDAT/genutil
    license: BSD-3-Clause
    license_file: bsd-3-clause.txt
    summary: 'General Utitilites for the Community Data Analysys Tools'

extra:
    recipe-maintainers:
        - doutriaux1
        - dnadeau4
        - xylar
        - downiec
        - muryanto1
        - jasonb5
        - forsyth2

